<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extensión de la vista de formulario del socio -->
    <record id="view_partner_form_document_extension" model="ir.ui.view">
        <field name="name">res.partner.form.document.extension</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Añadir botón para ver documentos en la barra superior -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_attachments" type="object" class="oe_stat_button" icon="fa-file-text-o"
                        attrs="{'invisible': [('attachment_count', '=', 0)]}">
                    <field name="attachment_count" widget="statinfo" string="Documentos"/>
                </button>
            </xpath>
            <!-- Añadir pestaña para ver todos los documentos adjuntos -->
            <xpath expr="//notebook" position="inside">
                <page string="Documentos adjuntos" name="attachments">
                    <field name="attachment_ids" readonly="1"
                           context="{'default_res_model': 'res.partner', 'default_res_id': active_id}">
                        <tree>
                            <field name="name"/>
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="file_size"/>
                            <field name="mimetype"/>
                            <field name="description" optional="show"/>
                            <field name="s3_url" widget="url" optional="show"/>  <!-- Asegúrate de que este campo existe -->
                        </tree>
                    </field>
                    <p class="text-muted mt-3">
                        Nota: Los documentos cargados en cualquier campo tipo archivo se guardarán automáticamente como adjuntos.
                    </p>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
