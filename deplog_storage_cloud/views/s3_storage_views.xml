<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- S3 Settings Form View -->
        <record id="view_s3_storage_settings_form" model="ir.ui.view">
            <field name="name">s3.storage.settings.form</field>
            <field name="model">s3.storage.settings</field>
            <field name="arch" type="xml">
                <form string="S3 Storage Settings">
                    <header>
                        <button name="test_connection" string="Test Connection" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="aws_access_key"/>
                                <field name="aws_secret_key" password="True"/>
                            </group>
                            <group>
                                <field name="bucket_name"/>
                                <field name="region_name"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- S3 Settings Tree View -->
        <record id="view_s3_storage_settings_tree" model="ir.ui.view">
            <field name="name">s3.storage.settings.tree</field>
            <field name="model">s3.storage.settings</field>
            <field name="arch" type="xml">
                <tree string="S3 Storage Settings">
                    <field name="name"/>
                    <field name="bucket_name"/>
                    <field name="region_name"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>
        <record id="action_s3_storage_settings" model="ir.actions.act_window">
            <field name="name">S3 Storage Settings</field>
            <field name="res_model">s3.storage.settings</field>
            <field name="view_mode">tree,form</field>  <!-- Esto asegura que se muestren primero las configuraciones en lista -->
            <field name="target">current</field> <!-- Esto hará que se abra en la misma página -->
        </record>

        <!-- S3 Settings Menu -->
        <menuitem id="menu_s3_storage_settings"
                  name="S3 Storage"
                  parent="base.menu_administration"
                  sequence="100"/>

        <menuitem id="menu_s3_storage_configuration"
                  name="Settings"
                  parent="menu_s3_storage_settings"
                  action="action_s3_storage_settings"
                  sequence="10"/>
    </data>
</odoo>